        .solutions#solutions
            .solutions__tittle  
                .solutions__heading Solution
                .solutions__content Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
            .solution__list 
                mixin solution(number,heading, element1, element2, element3, element4)
                    .solution 
                        .solution__wrapper 
                            p.solution__number= number
                            .solution__heading= heading
                            .solution__group 
                                p= element1
                                p= element2
                                if(element3)
                                    p= element3
                                if(element4)
                                    p= element4
                
                +solution('01.',' Strategy & Creative','Digital Maketing strategy','Brand Positioning','Creative Development')
                +solution('02.'," SNS","Social Content","Social Media","Social Listening & Insights")
                +solution('03.'," Web & app","Website & Mobile Application","UI/UX Development")
                +solution("04."," Digital activation","Creative Strategy","Digital Campaign","KOL/Buzzers")
                +solution("05."," Data Marketing","Data Management Platform","System Integration","Data Analysis", "Costumer Data Visualization")
